<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:text="@string/stranger_things"
        android:textSize="36sp"
        android:background="#000"
        android:textColor="#fff"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle=""/>

    <ImageView
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_status"
            android:text="Continuing"
            android:background="#000"
            android:textColor="#49fc03"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_network"
            android:background="#000"
            android:textColor="#e3280b"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_rating_label"
                android:text="Rating: "
                android:textAlignment="textStart"
                android:textSize="14sp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start" />
            <TextView
                android:id="@+id/text_rating"
                android:textAlignment="textStart"
                android:textSize="15sp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_air_date_label"
                android:text="Air Date: "
                android:textAlignment="textStart"
                android:textSize="14sp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start" />
            <TextView
                android:id="@+id/text_air_date"
                android:text="07-15-2016"
                android:textAlignment="textStart"
                android:textSize="15sp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:text="Seasons"
        android:textSize="24sp"
        android:textAlignment="center"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Season 1"
        android:textSize="16sp"
        android:textAlignment="textStart"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12sp"
                    android:padding="3sp"
                    android:textAlignment="textStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start" />
                <TextView
                    android:textSize="12sp"
                    android:textAlignment="textStart"
                    android:padding="3sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start" />
                <TextView
                    android:textSize="12sp"
                    android:textAlignment="textStart"
                    android:padding="3sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start" />
                <TextView
                    android:textSize="12sp"
                    android:textAlignment="textStart"
                    android:padding="3sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start" />
                <TextView
                    android:textSize="12sp"
                    android:textAlignment="textStart"
                    android:padding="3sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start" />
                <TextView
                    android:textSize="12sp"
                    android:textAlignment="textStart"
                    android:padding="3sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start" />
                <TextView
                    android:textSize="12sp"
                    android:textAlignment="textStart"
                    android:padding="3sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start" />
                <TextView
                    android:textSize="12sp"
                    android:textAlignment="textStart"
                    android:padding="3sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>

